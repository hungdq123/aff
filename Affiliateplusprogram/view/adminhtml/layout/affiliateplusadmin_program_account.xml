<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <update handle="formkey"/>
    <body>
        <container name="root">
            <block class="Magestore\Affiliateplusprogram\Block\Adminhtml\Program\Edit\Tab\Account" name="program.edit.tab.account"/>
            <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="product_account_grid_serializer">
                <arguments>
                    <argument name="input_names" xsi:type="string">position</argument>
                    <argument name="grid_block" xsi:type="string">program.edit.tab.account</argument>
                    <argument name="callback" xsi:type="string">getSelectedRelatedAccounts</argument>
                    <argument name="reload_param_name" xsi:type="string">oaccount</argument>
                    <argument name="input_element_name" xsi:type="string">program_account</argument>
                </arguments>
            </block>
        </container>
    </body>
</layout>
