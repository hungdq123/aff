<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
  <scope id="global">
    <fieldset id="sales_convert_quote_address">
        <field name="base_affiliateplus_discount">
            <aspect name="to_order" />
        </field>
        <field name="affiliateplus_discount">
            <aspect name="to_order" />
        </field>
        <field name="base_affiliate_credit">
            <aspect name="to_order" />
        </field>
        <field name="affiliate_credit">
            <aspect name="to_order" />
        </field>
    </fieldset>

    <fieldset id="sales_convert_quote_item">
        <field name="affiliateplus_amount">
            <aspect name="to_order_item" />
        </field>
        <field name="base_affiliateplus_amount">
            <aspect name="to_order_item" />
        </field>
        <field name="affiliateplus_commission">
            <aspect name="to_order_item" />
        </field>
        <field name="affiliateplus_commission_item">
            <aspect name="to_order_item" />
        </field>
        <field name="affiliate_credit">
            <aspect name="to_order_item" />
        </field>
        <field name="base_affiliate_credit">
            <aspect name="to_order_item" />
        </field>
    </fieldset>
  </scope>
</config>