<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magestore_Affiliateplus::magestoreaffiliateplus" title="AFFILIATEPLUS" sortOrder="30">
                    <resource id="Magestore_Affiliateplus::manageaccount" title="Manage Account" sortOrder="20" />
                    <resource id="Magestore_Affiliateplus::managebanners" title="Manage Banner" sortOrder="60" />
                    <resource id="Magestore_Affiliateplus::managetransactions" title="Manage Transactions" sortOrder="80" />
                    <resource id="Magestore_Affiliateplus::managewithdrawals" title="Manage Withdrawals" sortOrder="100" />
                    <resource id="Magestore_Affiliateplus::settings" title="Settings" sortOrder="120" />
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magestore_Affiliateplus::config_affiliateplus" title="Affiliateplus Settings" />
                            <resource id="Magestore_Affiliateplus::config_affiliateplus_payment" title="Affiliate Plus Payment" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
